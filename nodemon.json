{
    "restartable": "rs",
    "verbose": false,
    "execMap": {
        "js": "node --harmony --harmony_scoping --harmony_modules"
    },
    "watch": [
	"./"
    ],
    "ignore": [
        ".git", "node_modules", "bower_components", ".sass-cache",
        "gulpfile.js", "webpack.*", "nodemon.json", "*.sublime-*",
        "*.diff", "*.log", ".cvsignore", ".gitignore"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json html htm css scss sass png svg jpg gif txt hbs ejs rb xml jpeg avi mp3 mp4 dust mpg py txt env dust sh"
}
